<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My CRUD in NodeJS</title>
</head>
<body>
    
    <h2>Registros</h2>
        <table border="1">
            <thead>
                <tr>
                    <td>Código da Disciplina</td>
                    <td>Nome</td>
                    <td>Horários</td>
                    <td>Ação</td>
                </tr>
            </thead>
            <tbody>
            <% data.forEach(function(details) { %>
                <tr>
                    <td><%= details.codigo %></td>
                    <td><%= details.name %></td>
                    <td><%= details.horarios %></td>
                    <td><a href="/edit/<%= details._id %>">Editar</a> - <a href="/delete/<%= details._id %>">Deletar</a></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <button><a href="/disciplina">Novo</a></button>
</body>
</html>